
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Products</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top panel-heading">
        <div class="container">
            <div class="navbar-header">
                
                @Html.ActionLink("Products", "Index", "Products", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">

                @Html.Partial("_LoginPartial")
            </div>
            @*<div class="navbar-collapse collapse">
                @if (@User.Identity.Name != null)
                {

                    @Html.ActionLink("Show Cart", "Index", "Carts") <h4>@ViewBag.TotalItems</h4>
                }
            </div>*@

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/Products")
    @RenderSection("scripts", required: false)
</body>
</html>
